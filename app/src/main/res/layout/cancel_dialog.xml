<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <LinearLayout
        android:id="@+id/elimina_eliminador"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cancel_dialog_text"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_dialog_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/ticket_cancel"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/ticket_cancel"
            android:layout_weight="1"
            android:background="@drawable/gray_rect"
            android:backgroundTint="@color/verne"
            android:foreground="?attr/selectableItemBackground"
            android:text="No"
            android:textColor="@color/blanco"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancel_dialog_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout11"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/gray_rect"
            android:backgroundTint="@color/grismedio"
            android:foreground="?attr/selectableItemBackground"
            android:text="Yes"
            android:textColor="@color/grisletra"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/cancel_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Â¿Cancel order?"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />
</RelativeLayout>